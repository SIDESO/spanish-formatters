{
    "name": "sideso/spanish-formatters",
    "description": "A package to format numbers, dates, strings, etc.",
    "homepage": "https://github.com/SIDESO/spanish-formatters",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Diaz Arrieta",
            "email": "sdiazarrieta0627@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "nesbot/carbon": "^2.64.0 || ^3.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sideso\\SpanishFormatters\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sideso\\SpanishFormatters\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
